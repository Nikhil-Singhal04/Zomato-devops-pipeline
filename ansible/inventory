# Ansible Inventory - Zomato Application Servers
# This file defines the target servers for deployment
# Update the ansible_host IP after running terraform apply

[app_servers]
# Using public IP from terraform output
zomato-server ansible_host=13.205.72.3 ansible_user=ubuntu ansible_ssh_private_key_file=~/.ssh/zomato-deploy-key.pem

[app_servers:vars]
# Python interpreter on Ubuntu
ansible_python_interpreter=/usr/bin/python3

# Application deployment directory
app_dir=/home/ubuntu/zomato-app

# Environment
environment=production

[jenkins_servers]
# Jenkins server - updated from terraform output
jenkins-server ansible_host=43.204.123.111 ansible_user=ubuntu ansible_ssh_private_key_file=~/.ssh/zomato-deploy-key.pem

[jenkins_servers:vars]
ansible_python_interpreter=/usr/bin/python3
